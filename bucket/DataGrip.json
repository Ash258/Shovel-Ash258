{
    "version": "2018.3.1-183.4886.38",
    "description": "DataGrip. Cross-Platform IDE for Databases & SQL by JetBrains.",
    "homepage": "https://www.jetbrains.com/datagrip/",
    "url": "https://download.jetbrains.com/datagrip/datagrip-2018.3.1.exe#/cosi.7z",
    "hash": "8b27c34e6ea65dc2e19692ddf3538dd08d151586b0a7ec2a6a3e0fc503b4abc8",
    "architecture": {
        "64bit": {
            "bin": [
                "bin\\datagrip.bat",
                "bin\\datagrip64.exe"
            ],
            "shortcuts": [
                [
                    "bin\\datagrip64.exe",
                    "DataGrip"
                ]
            ]
        },
        "32bit": {
            "bin": "bin\\datagrip.exe",
            "shortcuts": [
                [
                    "bin\\datagrip.exe",
                    "DataGrip"
                ]
            ]
        }
    },
    "installer": {
        "script": [
            "$newDir = \"$(Split-Path \"$dir\")\\current\" -replace '\\\\', '/'",
            "$file = 'idea.properties'",
            "if (-not (Test-Path \"$persist_dir\\$file\")) {",
            "    Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
            "    $file = \"$dir\\bin\\$file\"",
            "    $CONT = Get-Content $file",
            "    $persistedConfigDir = \"$newDir/persistedConfig\"",
            "        # Replacing config options",
            "    $CONT = $CONT -replace '^# idea.config.path=.*$', \"idea.config.path=$persistedConfigDir/config\"",
            "    $CONT = $CONT -replace '^# idea.system.path=.*$', \"idea.system.path=$persistedConfigDir/system\"",
            "    $CONT = $CONT -replace '^# idea.plugins.path=', 'idea.plugins.path='",
            "    $CONT = $CONT -replace '^# idea.log.path=', 'idea.plugins.path='",
            "        # Rewrite properties file",
            "    Set-Content $file ($CONT -join \"`r`n\") -Encoding Ascii -Force",
            "}",
            "Remove-Item \"$dir\\`$*\" -Force -Recurse"
        ]
    },
    "persist": [
        "bin\\idea.properties",
        "persistedConfig"
    ],
    "checkver": {
        "url": "https://data.services.jetbrains.com/products/releases?code=DG&latest=true&platform=zip&type=release",
        "regex": "version\":\"(?<ver>[\\d\\.]+)\".*\"build\":\"(?<build>[\\d\\.]+)\"",
        "replace": "${ver}-${build}"
    },
    "autoupdate": {
        "url": "https://download.jetbrains.com/datagrip/datagrip-$matchVer.exe#/cosi.7z",
        "hash": {
            "url": "$url.sha256"
        }
    }
}
