{
    "version": "2.08.338",
    "description": "CloneApp. Backs up All Windows program settings.",
    "homepage": "https://www.myclone.app/",
    "license": "Freeware",
    "url": "https://www.myclone.app/download/cloneapp/send/2-cloneapp/19-cloneapp#/cosi.zip",
    "hash": "md5:3a0f5457fb8181c222a934757ce6fe73",
    "extract_dir": "CloneApp",
    "pre_install": [
        "$file = 'Data\\cloneapp.ini'",
        "if (-not (Test-Path \"$persist_dir\\$file\")) {",
        "    Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
        "    $CONT = @(",
        "        '[Settings]'",
        "      , \"ClonePath=$dir\\Backup\\\"",
        "      , \"LogPath=$dir\\Backup\\\"",
        "      , 'EditorPath=$AppEditor$' ",
        "    )",
        "    New-Item \"$dir\\$file\" -Type File | Out-Null",
        "    Set-Content \"$dir\\$file\" ($CONT -join \"`r`n\") -Encoding Ascii",
        "}"
    ],
    "persist": [
        "BackUp",
        "Data\\cloneapp.ini"
    ],
    "bin": "CloneApp.exe",
    "shortcuts": [
        [
            "CloneApp.exe",
            "CloneApp"
        ]
    ],
    "checkver": {
        "url": "https://www.myclone.app/downloads/ca_update/changelog.txt",
        "regex": "Changelog v([\\d\\.]+)"
    },
    "autoupdate": {
        "url": "https://www.myclone.app/download/cloneapp/send/2-cloneapp/19-cloneapp#/cosi.zip",
        "hash": {
            "url": "https://www.myclone.app/download/cloneapp",
            "find": "MD5 Checksum: ([A-Fa-f\\d]{32})"
        }
    }
}
