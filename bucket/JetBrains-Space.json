    "architecture": {
        "64bit": {
            "url": "https://download.jetbrains.com/space/jetbrains-space-2021.2.1.exe#/cosi.7z",
            "hash": "sha512:83c98e407bad16b5372bec1f97e0549438945a46cabaea0a11d2812c89c96336ea03fcf23d14850270d529522065d20556eb79f3330494dbbb0500a66d3b82f4",
